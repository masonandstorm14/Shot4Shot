<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mason.shot4shot.CustomLogin">

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText_createEmail"
        android:inputType="textEmailAddress"
        android:layout_marginTop="150dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:id="@+id/text"
        android:text="Email"
        android:layout_alignLeft="@+id/editText_createEmail"
        android:layout_alignStart="@+id/editText_createEmail"
        android:layout_marginTop="135dp"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText_createPassword"
        android:inputType="textPassword"
        android:layout_below="@+id/editText_createEmail"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="Password"
        android:layout_alignLeft="@+id/editText_createPassword"
        android:layout_alignStart="@+id/editText_createPassword"
        android:layout_below="@+id/editText_createEmail"
        android:layout_marginTop="35dp"/>
    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_createAccount"
        android:text="LogIn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText_createPassword"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Need An Account?"
        android:id="@+id/textView"
        android:layout_below="@+id/btn_createAccount"
        android:layout_alignLeft="@+id/btn_createAccount"
        android:layout_alignStart="@+id/btn_createAccount"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Make One"
        android:id="@+id/textView_makeAccount"
        android:textColor="@color/colorPrimary"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

</RelativeLayout>
